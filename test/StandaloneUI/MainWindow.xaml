<Window x:Class="StandaloneUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1000" Loaded="Window_Loaded">
    <Grid Initialized="Grid_Initialized" Name="layoutGrid">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="5, 5, 5, 5" Height="25" >
                <Label Content="Target:" Name="Target" />
                <ComboBox Name="TargetSelection" Width="120" />
            </StackPanel>
            <Border BorderBrush="Black" BorderThickness="1" Name="NuGetWindow" Height="665" />
            <TextBox Height="100" TextWrapping="Wrap" Text="NuGet Console" />
        </StackPanel>
    </Grid>
</Window>
